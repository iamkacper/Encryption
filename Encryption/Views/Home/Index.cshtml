@{
    ViewData["Title"] = "Home Page";
}

<a asp-action="Reset" class="btn btn-danger">Reset</a>
<a asp-action="GeneratePrimeNumbers" class="btn btn-success">Generate prime numbers</a>
<div class="container border-2">
    <div>
    <label>p: </label>
        @Encryption.Controllers.HomeController.getVarable("p")
    </div>
    <div>
    <label>q: </label>
        @Encryption.Controllers.HomeController.getVarable("q")
    </div>
    <div>
    <label>Public Key(e,n): </label>
        (@Encryption.Controllers.HomeController.getVarable("e") , @Encryption.Controllers.HomeController.getVarable("n"))
    </div>
    <div>
    <label>Private Key(d,n): </label>
        (@Encryption.Controllers.HomeController.getVarable("d") , @Encryption.Controllers.HomeController.getVarable("n"))
    </div>
</div>

<div class="d-flex mt-3 h2">
    <div class="container border border-3 border-success rounded m-2">
        <h3>
            Encrypt
        </h3>
        <form asp-action="Encrypt" method="post" class="m-2">
            <label>Text: </label>
            <input class="form-text" name="text" type="text" />
            <button class="btn btn-primary" type="submit">
                Encrypt
            </button>
        </form>
        <div class="m-2">
            @Encryption.Controllers.HomeController.getVarable("messageHashed")
        </div>
    </div>
    <div class="container border border-3 border-warning rounded m-2">
        <h3>Decipher</h3>
        <form asp-action="Decipher" method="post" class="m-2">
            <label>Text: </label>
            <input class="form-text" name="text" type="text" />
            <button class="btn btn-primary" type="submit">Decipher</button>
        </form>
        <div class="m-2">
            @Encryption.Controllers.HomeController.getVarable("message")
        </div>
    </div>
</div>